<div id="follow_form_<%= user.id %>">
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(followed_id: user.id), html: { method: :delete }, remote: true) do |f| %>
      <% if user.following?(current_user) %>
        <%= f.submit "友達をやめる", class: "btn btn-xs" %>
      <% else %>
        <%= f.submit "申請を取消す", class: "btn btn-xs" %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build(followed_id: user.id), remote: true) do |f| %>
      <%= f.hidden_field :followed_id %>
      <% if user.following?(current_user) %>
        <%= f.submit "申請を承認する", class: "btn btn-xs btn-blue", data: { confirm: '友達には覆面を脱いで素顔を見せます。よろしいですか？' } %>
      <% else %>
        <%= f.submit "友達を申請する", class: "btn btn-xs btn-blue", data: { confirm: '友達には覆面を脱いで素顔を見せます。よろしいですか？' } %>
      <% end %>
    <% end %>
  <% end %>
</div>
