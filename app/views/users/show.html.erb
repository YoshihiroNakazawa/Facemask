<div class="container-fluid">
  <div class="child row">
    <div class="col-md-10 col-md-offset-1">
      <div class="user-header-background">
        <div class="user-header">
        </div>
        <div class="user-profile-image" >
          <%= render partial: 'profileimage', locals: { user: @user } %>
        </div>
        <div class="user-name">
          <%= @user.name %>
        </div>
      </div>
    </div>
  </div>
  <div class="child row">
    <div class="wrapper col-md-10 col-md-offset-1 user-btn">
      <% if @user.id!=current_user.id %>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: @user.id), class: "btn btn-xs btn-blue", method: 'post' %>
        <%= render partial: 'follow_form', locals: { user: @user } %>
      <% else %>
        <div style="margin-top:30px">
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="child row">
    <div class="wrapper col-md-6 col-md-offset-3">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#topics" data-toggle="tab">トピック</a></li>
        <% if @user.id==current_user.id %>
        　<li><a href="#myfriends" data-toggle="tab">友達</a></li>
          <li><a href="#followers" data-toggle="tab">受信した友達申請</a></li>
          <li><a href="#followed_users" data-toggle="tab">送信した友達申請</a></li>
        <% else %>
          <li><a href="#friends" data-toggle="tab">友達</a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="child row">
    <div class="wrapper col-md-10 col-md-offset-1">
      <div class="tab-content">
        <div class="tab-pane active" id="topics">
          <div class="child row">
            <div class="wrapper col-md-6 col-md-offset-3">
              <div class="topics-body">
                <%= render partial: 'topics/index', locals: {topics: @user.topics.order(created_at: :desc)} %>
              </div>
              <div id="topic-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
              </div>
            </div>
          </div>
        </div>
        <% if @user.id==current_user.id %>
          <div class="tab-pane" id="myfriends">
            <div class="user-follow">
              <%= render partial: 'follow_index', locals: { users: @user.followers.where("users.id IN(SELECT followed_id FROM relationships WHERE follower_id = ?)",@user.id).order("relationships.created_at DESC") } %>
            </div>
          </div>
          <div class="tab-pane" id="followers">
            <div class="user-follow">
              <%= render partial: 'follow_index', locals: { users: @user.followers.where("users.id NOT IN(SELECT followed_id FROM relationships WHERE follower_id = ?)",@user.id).order("relationships.created_at DESC") } %>
            </div>
          </div>
          <div class="tab-pane" id="followed_users">
            <div class="user-follow">
              <%= render partial: 'follow_index', locals: { users: @followed_users = @user.followed_users.where("users.id NOT IN(SELECT follower_id FROM relationships WHERE followed_id = ?)",@user.id).order("relationships.created_at DESC") } %>
            </div>
          </div>
        <% else %>
          <div class="tab-pane" id="friends">
            <div class="user-follow">
              <%= render partial: 'follow_index', locals: { users: @user.followers.where("users.id IN(SELECT followed_id FROM relationships WHERE follower_id = ?)",@user.id).order("users.id") } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
