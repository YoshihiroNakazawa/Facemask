<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-10 col-md-offset-1">
    <div class="user-detail">
      <div class="user-profile-image" >
        <%= render partial: 'profileimage', locals: { user: @user } %>
      </div>
      <p><%= @user.name %></p>
    </div>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#topics" data-toggle="tab">トピック</a></li>
      <li><a href="#friends" data-toggle="tab">友達</a></li>
      <li><a href="#followers" data-toggle="tab">新規友達申請</a></li>
      <li><a href="#followed_users" data-toggle="tab">友達承認待ち</a></li>
    </ul>
  </div>
</div>
<div class="child row">
  <div class="wrapper col-md-6">
  </div>
  <div class="wrapper col-md-6">
    <div class="tab-content">
      <div class="tab-pane active" id="topics">
        <div class="topics-body">
          <%= render "topics/index" %>
        </div>
        <div id="topic-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
        </div>
      </div>
      <div class="tab-pane" id="friends">
        <div class="user-follow">
          <div class="user-friends">
            <%= render partial: 'follow_index', locals: { users: (@user.followed_users)&(@user.followers) } %>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="followers">
        <div class="user-follow">
          <div class="user-follower">
            <%= render partial: 'follow_index', locals: { users: (@user.followers)-(@user.followed_users) } %>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="followed_users">
        <div class="user-follow">
          <div class="user-followed">
            <%= render partial: 'follow_index', locals: { users: (@user.followed_users)-(@user.followers) } %>
          </div>
        </div>
      </div>
    </div>

    <%= link_to '戻る', :back %>
  </div>
</div>
