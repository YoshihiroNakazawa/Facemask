<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-10 col-md-offset-1">
    <div class="user-detail">
      <div class="user-profile-image" >
        <%= profile_img(@user) if profile_img(@user) %>
      </div>
      <p><%= @user.name %></p>
    </div>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#topics" data-toggle="tab">トピック</a></li>
      <li><a href="#friends" data-toggle="tab">友達</a></li>
    </ul>
  </div>
</div>
<div class="child row">
  <div class="wrapper col-md-6">
  </div>
  <div class="wrapper col-md-6">
    <div class="tab-content">
      <div class="tab-pane active" id="topics">
        <% if @user.topics.size == 0 %>
          <p class="left"><%= @user.name %>さんの投稿はありません。</p>
        <% else %>
          <table>
            <%= render partial: 'topics/index' %>
          </table>
        <% end %>
      </div>
      <div class="tab-pane" id="friends">
        <div class="user-follow">
          <div class="user-followed">
            <% if @user.followed_users.size == 0 %>
              <p class="left"><%= @user.name %>さんは誰もフォローしていません。</p>
            <% else %>
              <p class="left"><%= @user.name %>さんが以下のユーザーをフォローしています。</p>
              <%= render partial: 'follow_index', locals: { users: @user.followed_users } %>
            <% end %>
          </div>
          <div class="user-follower">
            <% if @user.followers.size == 0 %>
              <p class="left"><%= @user.name %>さんは誰からもフォローされていません。</p>
            <% else %>
              <p class="left">以下のユーザーが<%= @user.name %>さんをフォローしています。</p>
              <%= render partial: 'follow_index', locals: { users: @user.followers } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= link_to '戻る', :back %>
  </div>
</div>
