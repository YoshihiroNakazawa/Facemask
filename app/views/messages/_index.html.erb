<% messages.each do |message| %>
  <% unless message.id.nil? %>
    <p class="message-sender"><%= message.user.name %></p>
    <p class="created-at"><%= message.created_at.strftime("%-m月%-d日 %-H:%-M") %></p>
    <div class="clearfix"></div>
    <div class="message-body">
      <div id = "<%= message.id %>">
        <p><%= message.body %></p>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
<% end %>
