<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">
          <div class="icon-mask">
            <%= render partial: 'fukumen', locals: { user_id: current_user.id } %>
          </div>
        </a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" action="/users" role="search">
          <%= form_for @form, url: users_path, method: 'get' do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control", placeholder: '友達を見つける' %>
            </div>
            <button type="submit" class="fa fa-search btn btn-default"></button>
          <% end %>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li id="header-hidden1">
            <%= link_to user_path(current_user), class:"bar-profile", style:"padding-top:10px;padding-bottom:10px" do %>
              <div class="bar-profile-div">
                <div class="profile-image">
                  <i><%= profile_img(current_user) %></i>
                </div>
                <div class="text-profile">
                  <i><%= current_user.name %></i>
                </div>
              </div>
            <% end %>
            <div style="clear:both;position:relative;"></div>
          </li>


          <li id="header-hidden2"><%= link_to 'ホーム', root_path %></li>
          <li id="header-hidden3"><%= link_to '友達を検索', users_path %></li>
          <li>
            <%= link_to users_path do %>
             <i class="fa fa-user-plus fa-1x icon-font"></i>
            <% end %>
          </li>
          <li>
            <%= link_to conversations_path do %>
             <i class="fa fa-comments fa-1x icon-font"></i>
            <% end %>
          </li>
          <li>
            <%= link_to notifications_index_path do %>
              <i class="fa fa-globe fa-1x icon-font"><span id="unread_count"> <%= @notifications_count %></span></i>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'プロフィール', edit_user_registration_path %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
