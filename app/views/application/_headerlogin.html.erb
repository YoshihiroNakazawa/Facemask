<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">
          <div class="icon-mask">
            <%= image_tag "base#{(current_user.id%6)+1}.png" %>
            <%= image_tag "eye#{((current_user.id/1)%3)+1}.png", class: "parts-mask" %>
            <%= image_tag "nose#{((current_user.id/9)%3)+1}.png", class: "parts-mask" %>
            <%= image_tag "mouth#{((current_user.id/3)%3)+1}.png", class: "parts-mask" %>
          </div>
        </a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="友達を見つける">
          </div>
          <button type="submit" class="fa fa-search btn btn-default"></button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <%= link_to  edit_user_registration_path do %>
            <li class="icon-profile"><%= profile_img(current_user) %></li>
            <li class="text-profile"><%= current_user.name %></li>
          <% end %>
          <li><%= link_to 'ホーム', root_path %></li>
          <li><%= link_to '友達を検索', users_path %></li>
          <%= link_to users_path, class: "navbar-brand" do %>
           <i class="fa fa-user-plus fa-1x icon-font"></i>
          <% end %>
          <%= link_to conversations_path, class: "navbar-brand" do %>
           <i class="fa fa-comments fa-1x icon-font"></i>
          <% end %>
          <%= link_to notifications_index_path, class: "navbar-brand" do %>
            <i class="fa fa-globe fa-1x icon-font"><span id="unread_count"> <%= @notifications_count %></span></i>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'ユーザー一覧', users_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
