<p id="notice"><%= notice %></p>

<h1>トピック一覧</h1>
<%= link_to 'New Topic', new_topic_path %>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.user.name %></td>
        <td>
          <%= link_to topic_path(topic) do %>
            <%= topic.title %>
          <% end %>
        </td>
        <td><%= topic.content %></td>
        <td><%= link_to_if(topic.user.id==current_user.id, '編集', edit_topic_path(topic)) %></td>
        <td><%= link_to_if(topic.user.id==current_user.id, '削除', topic, method: :delete, data: { confirm: '本当に削除していいですか？' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
