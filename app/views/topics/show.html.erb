<div class="container-fluid">
  <div class="child row">
    <div class="left-col col-sm-3">
    </div>
    <div class="col-sm-6">
      <div class="panel topics-body">
        <div class="panel-heading">
          <div class="image-profile" >
            <%= render partial: 'profileimage', locals: { user: @topic.user } %>
          </div>
          <div class="topic-author"><%= @topic.user.name %></div>
          <div class="created-at"><%= @topic.created_at.strftime("%-m月%-d日 %-H:%-M") %></div>
        </div>
        <div class="panel-body">
          <div class="topic-title"><%= @topic.title %></div>
          <div class="topic-content"><%= @topic.content %></div>
        </div>
        <div class="panel-footer">
          <div id="comments_area">
            <%= render partial: 'comments/index', locals: { comments: @comments, topic: @topic } %>
          </div>
          <div id="comments_form">
            <%= render partial: 'comments/form', locals: { comment: @comment, topic: @topic } %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
</div>
