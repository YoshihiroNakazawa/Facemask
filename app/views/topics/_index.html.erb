<% @topics.each do |topic| %>
  <div class="panel">
    <div class="panel-heading">
      <div class="image-profile" ><%= profile_img(topic.user) if profile_img(topic.user) %></div>
      <div class="topic-author"><%= topic.user.name %></div>
      <div class="created-at"><%= topic.created_at %></div>
    </div>
    <div class="panel-body">
      <div class="topic-title"><%= topic.title %></div>
      <div class="topic-title"><%= topic.content %></div>
    </div>
    <div class="panel-footer">
      <div><%= link_to '編集', edit_user_topic_path(@user, topic), remote: true %></div>
      <div><%= link_to '削除', user_topic_path( @user, topic ), method: :delete, data: { confirm: '本当に削除していいですか？' } %></div>
    </div>
  </div>
<% end %>
