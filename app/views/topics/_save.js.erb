$(".topic-errors").html("")
<% if @topic.errors.any? %>
  <% @topic.errors.full_messages.each do |message| %>
    $(".topic-errors").append("<%= message.html_safe %>")
  <% end %>
<% else %>
  $(".topics-body").html("<%= escape_javascript(render partial: 'index', locals: {topics: @topics}) %>")
  $("#topic-modal").modal("hide")
<% end %>
